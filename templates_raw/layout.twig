<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>{% block title %}uonline{% endblock title %}</title>

		<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
		<style type="text/css">
			body { padding-top: 60px; }
		</style>
		<link href="/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" media="screen">

		<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->

		{% if admin %}<script src="stcs.js"></script>{% endif %}
		<script src="http://code.jquery.com/jquery-latest.js"></script>
		<script src="/bootstrap/js/bootstrap.min.js"></script>
	</head>
	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href="index.php">uonline</a>
					<ul class="nav">
						<li {% if instance == 'about' %} class="active" {% endif %}><a href="index.php?instance=about">Об игре</a></li>
						<li><a href="#">Новости</a></li>
						<li><a href="#">Форум</a></li>
						<li><a href="#">Рейтинг</a></li>
					</ul>
					<ul class="nav pull-right">
						{% if loggedIn == true %}
						<li><a href="index.php?instance=profile"><i class="{% if admin == true %}icon-certificate{% else %}icon-user{% endif %}"></i> <b>{{ login }}</b></a></li>
						<li {% if instance == 'profile' %} class="active" {% endif %}><a href="index.php?instance=profile">Профиль</a></li>
						<li {% if instance == 'game' %} class="active" {% endif %}><a href="index.php?instance=game">Игра</a></li>
						<li><a href="#">Почта {% if mail_count > 0 %}<span class="badge badge-info">{{ mail_count }}</span>{% endif %}</a></li>
						<!-- <li><a href="#">Кабинет</a></li> -->
						<li><a href="index.php?instance=logout">Выйти</a></li>
						{% elseif loggedIn == false %}
						<li {% if instance == 'login' %} class="active" {% endif %}><a href="index.php?instance=login">Войти</a></li>
						<li {% if instance == 'register' %} class="active" {% endif %}><a href="index.php?instance=register">Зарегистрироваться</a></li>
						{% else %}
						{% endif %}
						{% if admin == true %}
						<li class="divider-vertical"></li>
						<li><a href="#">Бункер</a></li>
						{% endif %}
					</ul>
				</div>
			</div>
		</div>

		<div class="container">
			{% block content %}
				Some default content.
			{% endblock content %}

			<hr />

			<footer>
				<p class="muted">&copy; m1kc и К<sup>о</sup>, 2012&ndash;{{ "now"|date("Y") }}</p>
			</footer>

		</div>
	</body>
</html>
