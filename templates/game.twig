{% extends "layout.twig" %}

{% block content %}
			<div class="page-header"><h1>{{ area_name }} <small>{{ location_name }}</small></h1></div>

			{% if pic is defined %}<img src="{{ pic }}" />{% endif %}

			<p>{{ description }}</p>

			{% for i in ways %}
				<a class="btn" href="game.php?to={{ i.to }}">{{ i.name }}</a>
			{% endfor %}
			
			<br />
			
			{% for i in players_list %}
				{{ i.name }} ({{ i.id }}), 
			{% endfor %}
			
			<div>
			<pre>
location_name == {{ location_name }}
area_name == {{ area_name }}
pic == {{ pic }}
description == {{ description }}
ways == {{ ways }}
players_list == {{ players_list }}
</pre>
			</div>
{% endblock content %}
