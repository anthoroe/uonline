extends layout
block title
	| Об игре
block content
	div.jumbotron
		h1(style='margin-left: -0.04em;') uonline
		p Первая в мире текстовая браузерная MMORPG. Альфа-версия.
		if loggedIn === true
			p
				a.pjax.btn.btn-default.btn-lg(href='/game/', role='button')
					i.glyphicon.glyphicon-send
					| #{' '}Начать играть
		else
			p
				a.pjax.btn.btn-primary.btn-lg(href='/register/', role='button') Регистрация
				| #{' '}
				a.pjax.btn.btn-default.btn-lg(href='/login/', role='button') Вход
