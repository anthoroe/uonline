extends layout
block title
	| Создание персонажа
block content
	.page-header
		h1 Создание персонажа
	form.form-horizontal(method='post', action='/new_character/')
		#character-name-form-group.form-group.has-feedback(class=(invalidName?'has-error':''))
			label.col-sm-2.control-label(for='character_name') Имя
			.col-sm-3
				input.form-control#character-name(type='text', name='character_name', maxlength='32', required, autofocus)
				span#character-name-feedback.glyphicon.glyphicon-ok.form-control-feedback(style='display: none')
			span.col-sm-7.help-block
				small От 2 до 32 символов, [a-zA-Z0-9а-яА-Я -] (пока это неважно, TODO).
		.form-group
			.col-sm-2
			.col-sm-3
				button.btn.btn-default(type='submit') Создать
