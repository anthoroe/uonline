mixin personalSign()
	i.text-muted.glyphicon.glyphicon-leaf(title='Это личный параметр, его нельзя увеличить вещами.')

//-mixin tr_td_ch(name, value, desc, perLevel, perSP, isPersonal)
mixin tr_td_ch(name, value, desc, isPersonal)
	tr
		td
			div #{name}
				if isPersonal === true
					| #{' '}
					+personalSign()
			div.profile-help.text-muted
				small= desc
			//-div.text-muted
				small +#{perLevel} за уровень, +#{perSP} за очко навыка.
		td= value
			//- | #{' '}
			//- a.btn.btn-mini(href='javascript://') &plus;


extends layout
block title
	| Профиль игрока #{username}
block content
	.page-header
		h1 #{username}&nbsp;&nbsp;
			small орк #{level}-го уровня
				if profileIsMine
					| #{' '}(это&nbsp;вы)
	.row
		.col-sm-5
			h4 Здоровье#{' '}
				+personalSign()
			.progress
				.progress-bar.progress-bar-success(style='width: '+health_percent+'%;', role="progressbar", aria-valuenow=health_percent, aria-valuemin="0", aria-valuemax="100")
					| #{ health }/#{ health_max }
			h4 Мана#{' '}
				+personalSign()
			.progress
				.progress-bar(style='width: '+mana_percent+'%;', role="progressbar", aria-valuenow=mana_percent, aria-valuemin="0", aria-valuemax="100")
					| #{ mana }/#{ mana_max }
			h4 Опыт
			.progress
				.progress-bar.progress-bar-warning(style='width: '+exp_percent+'%;', role="progressbar", aria-valuenow=exp_percent, aria-valuemin="0", aria-valuemax="100")
					| #{ exp }/#{ exp_max }
		.col-sm-1
		.col-sm-6
			h3 Характеристики
				button.profile-help-switcher.btn.btn-default.btn-sm
					i.glyphicon.glyphicon-question-sign
			table.table.table-striped.table-hover
				+tr_td_ch('Энергия', energy, 'Чем выше, тем большее расстояние может пройти персонаж, не уставая.')
				+tr_td_ch('Сила', power, 'Влияет на силу удара.')
				+tr_td_ch('Защита', defense, 'Влияет на поглощаемый урон.')
				+tr_td_ch('Ловкость', agility, 'Влияет на количество ударов за ход и шанс уворота.')
				+tr_td_ch('Точность', accuracy, 'Влияет на шанс нанести точный удар вне зависимости от шанса уворота противника.')
				+tr_td_ch('Интеллект', intelligence, 'Влияет на скорость регенерации маны.', true)
				+tr_td_ch('Инициатива', initiative, 'Влияет на очерёдность ходов в бою.')
