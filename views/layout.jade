					.button-row
						line-height: 2.8em
					.masked-nav-form
						padding: 0px !important
						margin: 0px !important
					.masked-nav-button
						border: none !important
						text-decoration: none !important
						padding: 15px !important
			//- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
